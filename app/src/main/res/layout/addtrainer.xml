<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:background="@android:color/holo_blue_bright"
            android:paddingTop="15dp"
            android:text="Name:"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/holo_purple"
            android:textSize="18sp" />

        <TextView
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:background="@android:color/holo_blue_bright"
            android:paddingLeft="40dp"
            android:paddingTop="15dp"
            android:text="Running(in miles):"
            android:textColor="@android:color/holo_purple"
            android:textSize="18sp" />

        <TextView
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:background="@android:color/holo_blue_bright"
            android:paddingLeft="40dp"
            android:paddingTop="15dp"
            android:text="Swimming(in laps):"
            android:textColor="@android:color/holo_purple"
            android:textSize="18sp" />


    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/name_id"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/running_id"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:inputType="number" />

        <EditText
            android:id="@+id/swimming_id"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:inputType="number" />

    </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/save_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_orange_dark"
        android:text="SAVE"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="24sp" />

    <ListView
        android:id="@android:id/list"
        style="@style/Widget.AppCompat.ListView.DropDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_purple"
        android:divider="@android:color/holo_green_dark"
        android:entries="@android:color/background_dark"></ListView>

</LinearLayout>